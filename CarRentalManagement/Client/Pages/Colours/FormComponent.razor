@*
    This form can be used for creating and editing goals.
*@

<EditForm Model="Colour" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Colour Name: </label>
            <div>
                <InputText @bind-Value="@Colour.Name" class="form-control" />
                <ValidationMessage For="@(() => Colour.Name)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <ChangeUrl Target="colours" />
</EditForm>

