@page "/models/"


<HeadingComponent Text="Models" />

<a href="/models/create" class="btn btn-secondary">
    <i class="oi oi-plus"></i>
    Create New Model
</a>
<br />
<br />

@if (Models is null)
{
    <div class="alert alert-info">Loading Models ....</div>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var model in Models)
                {
                    <tr>
                        <th>@model.Name</th>
                        <th>
                            <a href="/models/view/@model.Id" class="btn btn-primary">
                                <span class="oi oi-book"></span>
                            </a>
                            <a href="/models/edit/@model.Id" class="btn btn-warning">
                                <span class="oi oi-pencil"></span>
                            </a>
                            <button class="btn btn-danger" @onclick="@(async ()=>await Delete(model.Id))">
                                <span class="oi oi-book"></span>
                            </button>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
